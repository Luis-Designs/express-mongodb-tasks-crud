{{#if tasks}}
  <div class="table-responsive">
    <table class="table table-bordered table-hover table-dark table-sm">
      <thead>
        <th>N.</th>
        <th>Title</th>
        <th>Description</th>
        <th>Operations</th>
      </thead>

      <tbody>
        {{#each tasks}}
          <tr>
            <td>{{@index}}</td>
            <td>{{title}}</td>
            <td>{{description}}</td>
            <td>
              {{#if done}}
                <a
                  href="/tasks/{{_id}}/toggleDone"
                  class="btn btn-dark btn-sm"
                >Undone</a>
              {{else}}
                <a
                  href="/tasks/{{_id}}/toggleDone"
                  class="btn btn-success btn-sm"
                >Done</a>
              {{/if}}
              <a href="/tasks/{{_id}}/edit" class="btn btn-sm btn-info">edit</a>
              <a
                href="/tasks/{{_id}}/delete"
                class="btn btn-sm btn-danger"
              >delete</a>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
{{else}}
  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h2>No tasks</h2>
      <img src="/icons/empty.svg" alt="" class="w-75" />
    </div>
  </div>
{{/if}}